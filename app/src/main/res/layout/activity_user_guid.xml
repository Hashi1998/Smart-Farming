<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userguid"
    tools:context=".UserGuid">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="210dp"
        android:layout_height="69dp"
        android:text="User Guid"
        android:textColor="#1E3E37"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="255dp"
        android:layout_height="601dp"
        android:text="The Smart Farming app provides the information a farmer
needs to lead to better farming. Also seeds, fertilizers and
technical equipment, how to use technology for cultivation
and proper instructions can be obtained through this
application.. Farmers can find agricultural officer who needs
advice through this application. It is also possible to educate
farmers about their crops and sell them to farmers. And
there is also the ability to know the weather conditions in
the places where those crops are grown."
        android:textColor="#151414"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>